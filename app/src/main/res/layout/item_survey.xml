<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#F25454"
        tools:text="Q.\n혼자먹나요?"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/item_survey_content"
        android:layout_width="match_parent"
        android:layout_height="226dp"/>

    <TextView
        android:id="@+id/survey_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_survey_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:text="선택하신 결정에 따라\n페이스푸드가 메뉴를 정해드려요"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/answerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/survey_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:background="@color/white"
            tools:text="네"
            app:layout_constraintTop_toBottomOf="@id/item_survey_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_marginTop="23dp"
            android:background="@color/white"
            tools:text="아니요"
            app:layout_constraintTop_toBottomOf="@id/item_survey_content"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>